NameVirtualHost *:80

{% for vhost in apache_vhosts %}
    <VirtualHost *:80>
        ServerName {{ vhost.servername }}
        DocumentRoot {{ vhost.documentroot }}
    </VirtualHost>
{% endfor %}
{% if serveradmin %}
ServerAdmin {{ serveradmin }}
{% endif %}
  <Directory "{{ directorypath }}">
     AllowOverride All
     Options Indexes FollowSymLinks
     Order allow,deny
     Allow from all
  </Directory>
  [more rules...]
</VirtualHost>
